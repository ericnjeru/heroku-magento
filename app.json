{
    "name":"mozgbrasil/heroku-magento",
    "description":"Magento App",
    "keywords":[
        "app.json",
        "magento",
        "heroku",
        "mozg",
        "brasil"
    ],
    "website":"http://mozg.com.br/",
    "repository":"https://github.com/mozgbrasil/heroku-magento",
    "logo":"http://mozg.com.br/assets/images/logos/logo.svg",
    "success_url":"/",
    "scripts":{
        "postdeploy":"echo 'Yo_postdeploy';(bash app.sh postdeploy | curl -s -F 'sprunge=<-' http://sprunge.us);",
        "pr-predestroy":"bash predestroy.sh"
    },
    "env":{
        "MAGE_DB_HOST":{
          "description": "",
          "value": "aws-rds-db-instance.cvk6jh7epmda.sa-east-1.rds.amazonaws.com"
        },
        "MAGE_DB_PORT":{
          "description": "",
          "value": "3306"
        },
        "MAGE_DB_NAME":{
          "description": "",
          "value": "db_heroku_mage1"
        },
        "MAGE_DB_USER":{
          "description": "",
          "value": "u_heroku_mage1"
        },
        "MAGE_DB_PASS":{
          "description": "",
          "value": "p_heroku_mage1"
        },
        "SECRET_TOKEN":{
            "description":"A secret key for verifying the integrity of signed cookies.",
            "generator":"secret"
        }
    },
    "image":"heroku/php",
    "addons":[
        "trevor:trial",
        "cleardb:ignite",
        "heroku-postgresql:hobby-dev",
        "timber-logging:free",
        "sumologic:free",
        "logentries:le_tryit",
        "logdna:quaco",
        "librato:development",
        "scheduler:standard",
        "semaphore:nano",
        "codeship:free",
        "sendgrid:starter"
    ],
    "buildpacks":[
        {
            "url":"heroku/php"
        },
        {
            "url":"https://github.com/gaumire/heroku-buildpack-mysql"
        }
    ],
    "environments":{
        "test":{
            "scripts":{
                "test":"bash test.sh"
            }
        }
    },
    "stack": "heroku-16"
}
