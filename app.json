{
    "name":"mozgbrasil/heroku-magento",
    "description":"Magento App",
    "keywords":[
        "app.json",
        "magento",
        "heroku",
        "mozg",
        "brasil"
    ],
    "website":"http://mozg.com.br/",
    "repository":"https://github.com/mozgbrasil/heroku-magento",
    "logo":"http://mozg.com.br/assets/images/logos/logo.svg",
    "success_url":"/",
    "scripts":{
        "postdeploy":"echo 'Yo_postdeploy';bash app.sh _postdeploy >> log_postdeploy.txt;",
        "pr-predestroy":"echo 'Yo_predestroy';bash app.sh _predestroy >> log_predestroy.txt;"
    },
    "env":{
        "MAGE_DB_HOST":{
          "description": "",
          "value": "db4free.net"
        },
        "MAGE_DB_PORT":{
          "description": "",
          "value": "3306"
        },
        "MAGE_DB_NAME":{
          "description": "",
          "value": "hdb4free"
        },
        "MAGE_DB_USER":{
          "description": "",
          "value": "udb4free"
        },
        "MAGE_DB_PASS":{
          "description": "",
          "value": "sdb4free"
        },
        "SECRET_TOKEN":{
            "description":"A secret key for verifying the integrity of signed cookies.",
            "generator":"secret"
        }
    },
    "image":"heroku/php",
    "addons":[
        "trevor:trial",
        "cleardb:ignite",
        "heroku-postgresql:hobby-dev",
        "timber-logging:free",
        "sumologic:free",
        "logentries:le_tryit",
        "logdna:quaco",
        "librato:development",
        "scheduler:standard",
        "semaphore:nano",
        "codeship:free",
        "sendgrid:starter"
    ],
    "buildpacks":[
        {
            "url":"heroku/php"
        },
        {
            "url":"https://github.com/gaumire/heroku-buildpack-mysql"
        }
    ],
    "environments":{
        "test":{
            "scripts":{
                "test":"echo 'Yo_environments';bash app.sh _environments >> log_scripts.txt;"
            }
        }
    },
    "stack": "heroku-16"
}
